# NOTE: copy this file to repo-root .env only.
# Do NOT set GEMINI_* in .env.local or .envrc (repo policy: ROOT/.env is the single source of truth).

# --- LLM ---
# Default: keep USE_LLM=0 to ensure no external API calls.
USE_LLM=1

# Sub-toggles (avoid accidental double LLM in one request)
USE_LLM_REASONING=1
USE_LLM_REWRITE=0

# Default provider for tools: openai (recommended)
LLM_PROVIDER=openai

OPENAI_API_KEY=REPLACE_ME
OPENAI_MODEL=gpt-4o-mini
# Optional price config for cost guard (USD per 1K tokens)
# OPENAI_PRICE_INPUT_USD_PER_1K=0.000
# OPENAI_PRICE_OUTPUT_USD_PER_1K=0.000

# Gemini (optional; leave REPLACE_ME if unused)
GEMINI_API_KEY=REPLACE_ME
GEMINI_MODEL=gemini-2.5-flash
# Optional price config for cost guard (USD per 1K tokens)
# GEMINI_PRICE_INPUT_USD_PER_1K=0.000
# GEMINI_PRICE_OUTPUT_USD_PER_1K=0.000
# GOOGLE_API_KEY is intentionally unused (do not set it).
# Optional: override rewrite-only model (if unset, GEMINI_MODEL is used)
# GEMINI_EXPLAIN_MODEL=gemini-2.5-flash
GEMINI_MAX_OUTPUT_TOKENS=1024

# Gemini safety defaults (reduce multi-try fallback)
GEMINI_DISABLE_FALLBACK=1
GEMINI_SDK_ONLY=1

USE_DUMMY_ENGINE=0

# --- USI Engine ---
# どちらか利用: /usr/local/bin/yaneuraou or ~/engines/yaneuraou/bin/yaneuraou
ENGINE_CMD=/usr/local/bin/yaneuraou

# 実ファイルの置き場（絶対パス）
ENGINE_EVAL_DIR=/home/USER/engines/yaneuraou/eval
ENGINE_BOOK_DIR=/home/USER/engines/yaneuraou/book

# book.bin がない場合は USI_OwnBook=false に変えてください（user名を実ユーザー名に置換）
ENGINE_USI_OPTIONS=Threads=8,USI_Hash=256,USI_OwnBook=true,BookFile=book.bin,BookDir=/home/USER/engines/yaneuraou/book,FlippedBook=true,BookDepthLimit=32

# Example: change /home/USER to /home/yourusername

# --- Web (Next.js) ---
# Required only for auth/account pages (Supabase).
# Leave as REPLACE_ME if you do not use authentication features.
NEXT_PUBLIC_SUPABASE_URL=REPLACE_ME
NEXT_PUBLIC_SUPABASE_ANON_KEY=REPLACE_ME
